<?xml version="1.0" encoding="utf-8"?>
<selector  xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
		<layer-list>
		    <!-- shadow -->
		    <item>
		        <shape>
		            <gradient android:startColor="#B9B9B9" android:endColor="#999999" android:angle="270"/>
		            <corners android:radius= "5dp"/>
		        </shape>
		    </item>
		    
		    <item android:top="1.2dp" android:bottom="1.4dp" android:left="1.5dp" android:right="1.5dp">
		        <shape>
		            <solid android:color="#ffffff"/>
		            <corners android:radius="5dp"/>
		            <stroke android:color="#dfdfdf" android:width="0.5dp"/>
		        </shape>
		    </item>
		</layer-list>
	</item>
</selector>